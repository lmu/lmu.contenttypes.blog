<?xml version="1.0" ?>
<model xmlns="http://namespaces.plone.org/supermodel/schema"
       xmlns:form="http://namespaces.plone.org/supermodel/form" 
       xmlns:security="http://namespaces.plone.org/supermodel/security" 
       xmlns:marshal="http://namespaces.plone.org/supermodel/marshal"
       xmlns:i18n="http://namespaces.zope.org/i18n"
       i18n:domain="lmu.contenttypes.blog">
  <schema>
  	<!-- field definitions -->
    <field name="title" type="zope.schema.TextLine">
      <title i18n:translate="lable_title_title">Title</title>
      <description i18n:translate="lable_title_description">Name des Blog-Eintrags</description>
      <required>True</required>
    </field>
    <field name="text"
           type="plone.app.textfield.RichText"
           form:widget="plone.app.textfield.widget.RichTextFieldWidget"
           form:after="ILeadImage.image_caption">
      <title i18n:translate="lable_text_title">Text</title>
      <description i18n:translate="lable_text_description">Blog-Text</description>
      <required>True</required>
    </field>
  </schema>
</model>