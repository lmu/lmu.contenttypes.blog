    <browser:page
        name="report_blog_entry"
        for="lmu.contenttypes.blog.interfaces.IBlogEntry"
        layer="lmu.contenttypes.blog.interfaces.IBlogLayer"
        permission="zope2.View"
        class="..content.BlogReportForm"
        />
-->

</configure>
